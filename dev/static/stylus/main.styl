@import '../fonts/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
  font-size baseFontSize
  height 100%
  line-height 1.3

body
  font-family 'Montserrat', sans-serif
  height 100%

h1, h2, h3, h4, h5, h6
  margin 0

ul, li
  list-style-type none
  margin 0
  padding 0

button
  border: none
  background: none

p
  margin 0

img
  max-width 100%

a
  color inherit
  text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
  vertical-align middle

textarea
  resize none

section
  position relative

*, *:before, *:after
  box-sizing border-box
  outline none

.body
  display: flex
  flex-direction: column
  min-width 100%
  min-height: 100vh
  position: relative

.stop-scrolling
  margin: 0
  height: 100%
  overflow: hidden

.container
  max-width: containerWidthIndex
  margin: 0 auto


.main
  flex-grow: 1

  &_with-sidebar
    display: flex
    align-items: stretch

    .container
      width: containerWidthSidebar

  .content
    padding-top: 79px
    height: calc(100% - 136px)
    display: flex
    flex-direction: column

    & > .container
      flex-grow: 1

  &__sidebar
    background-color: gray_light2

  &__content
    width: 100%




