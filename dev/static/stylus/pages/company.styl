.company

  &__pointed
    margin-bottom: 60px

  &__reasons
    margin-bottom: 40px

    .reasons

      &__list
        display: flex
        flex-wrap wrap
        counter-reset: reason

        @media screen and (max-width: 769px)
          flex-direction: column

      &__item
        display: flex
        align-items: center
        width: calc(50% - 15px)
        margin-bottom: 35px

        font-weight: 500
        font-size: 16px
        line-height: 30px
        color: gray_dark


        @media screen and (max-width: 769px)
          width: 100%
          font-size: 14px
          line-height: 26px

        &::before
          display: flex
          flex-grow: 0;
          flex-shrink: 0;
          align-items: center
          justify-content: center
          width: 68px
          height: 68px
          margin-right: 30px
          border-radius 50%
          background-color: green_base

          content: '0' counter(reason)
          counter-increment: reason

          font-size: 18px
          line-height: 32px
          color: white
          font-weight: 700

          @media screen and (max-width: 769px)
            margin-right: 10px

        &:nth-child(odd)
          margin-right: 30px
