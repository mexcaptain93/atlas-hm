.owners

  .main .content
    padding-bottom: 0

  &__subheading
    margin-bottom: 43px

    @media screen and (max-width: 769px)
      margin-bottom: 40px

    &.capital-14
      margin-bottom: 53px

      text-align: center

    &_last.capital-14
      margin-bottom: 113px

      @media screen and (max-width: 1200px)
        margin-bottom: 60px

  &__two-columns
    display: flex
    margin-bottom: 50px

    @media screen and (max-width: 1200px)
      margin-bottom: 60px

    @media screen and (max-width: 769px)
      flex-direction: column
      margin-bottom: 0

    p
      width: 50%
      line-height: 30px

      @media screen and (max-width: 769px)
        width: 100%
        padding-left: 0
        padding-right: 0
        margin-bottom: 40px

      &.like-h4
        line-height: 36px

        @media screen and (max-width: 1200px)
          padding-right: 15px

    .two-cols

      &__item
        width: 50%
        flex-shrink: 0

        @media screen and (max-width: 769px)
          width: 100%

        p
          width: 100%


    &_meaning
      margin-bottom: 46px

      @media screen and (max-width: 769px)
        margin-bottom: 0

    &_first

      p
        &:nth-child(1)
          padding-right: 15px

          @media screen and (max-width: 769px)
            padding-right: 0

        &:nth-child(2)
          padding-left: 15px

          @media screen and (max-width: 769px)
            padding-left: 0

    &_requirements
      margin-bottom: 63px

      @media screen and (max-width: 769px)
        margin-bottom: 0


  &__pointed
    margin-bottom: 54px

  &__blocks
    display: flex
    justify-content: space-between
    margin-bottom: 54px

    @media screen and (max-width: 769px)
      flex-direction: column

  .block
    display: flex
    width: 555px
    padding: 64px 40px 54px
    background-color: blue_base

    @media screen and (max-width: 1200px)
      width: calc(50% - 15px)
      flex-direction: column

    @media screen and (max-width: 769px)
      width: 100%
      margin-bottom: 20px

    &:last-child

      @media screen and (max-width: 769px)
        margin-bottom: 0

    &__photo
      flex-shrink: 0
      width: 68px
      height: 68px
      border: 1px solid white
      border-radius 50%

      @media screen and (max-width: 1200px)
        margin-bottom: 24px

    &__right
      padding-left: 24px

      @media screen and (max-width: 1200px)
        padding-left: 0

    &__title
      margin-top: -5px
      margin-bottom: 11px
      @extend .body .capital-18

      color: white

    &__descr
      font-size: 16px
      line-height: 26 px
      color: white

      br

        @media screen and (max-width: 1200px)
          display: none


  &__table
    margin-bottom: 60px

  .table
    border: 1px solid #eaeaea

    &__row:last-child .table__td
      border-bottom none

    &__td
      border-bottom: 1px solid #eaeaea
      border-right: 1px solid #eaeaea
      padding: 31px 40px 28px

      font-size: 16px
      line-height: 30px
      font-weight: 500

      &:last-child
        border-right: none

  .two-cols

    &__heading
      margin-bottom: 23px

    &__item

      &:nth-child(2)
        padding-left: 15px

        @media screen and (max-width: 769px)
          padding-left: 0

  .navigation
    margin-bottom: 3px