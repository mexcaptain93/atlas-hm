.index

  .slide
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    height: 760px
    background-repeat: no-repeat
    background-size: cover
    background-position: center center

    @media screen and (max-width: 750px)
      height: 410px

    &__heading
      max-width: 945px
      margin-bottom: 40px

      font-weight: 700
      font-size: 48px
      line-height: 58px
      color: white
      text-align: center

      @media screen and (max-width: 750px)
        font-size: 28px
        line-height: 32px
        text-align: left
        width: 100%
        padding: 0 15px

      @media screen and (max-width: 400px) {
        font-size: 24px
        line-height: 28px
      }

    &__text
      max-width: 848px
      margin-bottom: 50px

      font-size: 18px
      line-height: 28px
      color: white
      text-align: center

  .slider
    position: relative

    .slick-arrow
      display: none !important

    .slick-dots
      width: 100%
      position: absolute
      bottom: 62px
      display: flex
      justify-content: center
      align-items: center

      @media screen and (max-width: 750px)
        bottom: 20px

      li
        margin-right: 18px

        font-size: 0
        line-height: 0

        &:last-child
          margin-right: 0

      button
        width: 6px
        height: 6px
        padding: 0
        border-radius 50%
        border none
        background-color alpha(white, 0.3)
        cursor: pointer

        @extend .transition

        &:hover
          background-color: white

      .slick-active

        button
          width: 10px
          height: 10px
          background-color: white;

    &__prev
      position: absolute
      top: 50%
      left: "calc((100% - %s) / 2)" % containerWidthIndex
      transform: translate(-100%, -50%)
      z-index: 2

      @media screen and (max-width: 1200px)
        top: auto
        bottom: 15px
        left: calc(50% - 100px)

      @media screen and (max-width: 1440px) and (min-width: 1201px)
        left: "calc((100% - %s + 54px) / 2)" % containerWidthIndex

      @media screen and (max-width: 750px)
        display: none

    &__next
      position: absolute
      top: 50%
      right: "calc((100% - %s) / 2)" % containerWidthIndex
      transform: translate(100%, -50%)
      z-index: 2

      @media screen and (max-width: 1200px)
        top: auto
        bottom: 15px
        right: calc(50% - 100px)

      @media screen and (max-width: 1440px) and (min-width: 1201px)
        right: "calc((100% - %s + 54px) / 2)" % containerWidthIndex

      @media screen and (max-width: 750px)
        display: none


    &__round
      width: 100%
      height: 100%
      position: absolute
      z-index: 2
      pointer-events none
      background-image: url('../img/svg/index-slider-round.svg')
      background-repeat no-repeat
      background-position center center
      background-size 1190px

      @media screen and (max-width: 1440px) and (min-width: 1201px)
        background-size: 1140px;

      @media screen and (max-width: 1200px)
        display: none





