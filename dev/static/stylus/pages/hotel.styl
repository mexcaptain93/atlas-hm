.hotel

  &__name
    margin-bottom: 26px

  &__text
    display: flex
    margin-bottom: 50px

    @media screen and (max-width: 769px)
      flex-direction: column
      margin-bottom: 20px


    p
      width: 50%

      @media screen and (max-width: 769px)
        width: 100%

      &:nth-child(odd)
        padding-right: 15px

        @media screen and (max-width: 769px)
          padding-right: 0

      &:nth-child(even)
        padding-left: 15px

        @media screen and (max-width: 769px)
          padding-left: 0

    &_line

      p
        width: 100%

  &__photo
    margin-bottom: 53px

  &__data
    width: 945px
    max-width: 100%
    margin: 0 auto 70px

    .like-h3
      margin-bottom: 28px

    .like-h4
      margin-bottom: 15px

    img
      margin-bottom: 27px

    p.sub
      margin-bottom: 45px

      line-height: 28px

    .capital-14
      margin-bottom: 25px

      color: blue_base
      line-height: 29px

  ul
    margin-bottom: 53px

    li
      position: relative
      text-indent: 37px

      @extend .body .sub

      color: gray_dark

      &::before
        content: ''
        width: 2px
        height: 2px
        border-radius: 50%
        display: block
        position: absolute
        top: 12px
        left: 3px
        background-color: gray_dark

  .contacts
    display: flex
    margin-bottom: 80px

    @media screen and (max-width: 769px)
      flex-direction: column
      margin-bottom: 20px

    &__item
      width: 360px
      height: 250px
      margin-right: 30px
      margin-bottom: 30px
      background-color: blue_base
      padding: 40px 10px

      text-align: center

      @media screen and (max-width: 769px)
        width: 100%


      &:nth-child(3n)
        margin-right: 0

    &__icon
      display: flex
      justify-content: center
      align-items: center
      width: 50px
      height: 50px
      margin: 0 auto 18px
      border-radius: 50%
      background-color: green_base

      &::before
        content: ''
        display: block
        background-repeat: no-repeat
        background-size: 100%

      &_address

        &::before
          width: 11px
          height: 16px
          background-image: url('../img/general/contacts-address.png')

      &_phone

        &::before
          width: 16px
          height: 16px
          background-image: url('../img/general/contacts-phone.png')

    &__title
      margin-bottom: 4px

      @extend .body .like-h4
      color: white

    &__value
      font-size: 14px
      line-height: 26px
      color: alpha(white, 0.6)
