.hotel

  &__name
    margin-bottom: 18px

  &__text
    display: flex
    margin-bottom: 50px

    p
      width: 50%

      &:nth-child(odd)
        padding-right: 15px

      &:nth-child(even)
        padding-left: 15px

  &__photo
    margin-bottom: 53px

  &__data
    width: 945px
    margin: 0 auto 70px

    .like-h4
      margin-bottom: 15px

    p.sub
      margin-bottom: 45px

      line-height: 28px

    .capital-14
      margin-bottom: 25px

      color: blue_base
      line-height: 29px

  img
    margin-bottom: 57px

  ul
    margin-bottom: 53px

    li
      position: relative
      text-indent: 37px

      @extend .sub

      color: gray_dark

      &::before
        content: ''
        width: 2px
        height: 2px
        border-radius: 50%
        display: block
        position: absolute
        top: 12px
        left: 3px
        background-color: gray_dark

  .contacts
    display: flex

    &__item
      width: 360px
      height: 250px
      margin-right: 30px
      margin-bottom: 30px
      background-color: blue_base
      padding: 40px 10px

      text-align: center

      &:nth-child(3n)
        margin-right: 0

    &__icon
      display: flex
      justify-content: center
      align-items: center
      width: 50px
      height: 50px
      margin: 0 auto 18px
      border-radius: 50%
      background-color: green_base

      &::before
        content: ''
        display: block
        background-repeat: no-repeat
        background-size: 100%

      &_address

        &::before
          width: 11px
          height: 16px
          background-image: url('../img/general/contacts-address.png')

      &_phone

        &::before
          width: 16px
          height: 16px
          background-image: url('../img/general/contacts-phone.png')

    &__title
      margin-bottom: 4px

      @extend .like-h4
      color: white

    &__data
      font-size: 14px
      line-height: 26px
      color: alpha(white, 0.6)
