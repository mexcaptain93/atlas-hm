.header
  display: flex
  align-items: center
  justify-content: space-between
  background-color: blue_base
  padding: 25px 50px

  @media screen and (max-width: 1440px)
    padding: 25px 20px

  @media screen and (max-width: 769px)
    padding: 25px 15px 13px

  &__logo
    width: 370px

    @media screen and (max-width: 1680px)
      width: auto

    @media screen and (max-width: 1200px)
      flex-grow: 1

    @media screen and (max-width: 769px)
      text-align: center

  &__menu


    .menu

      &__list
        display: flex

      &__item
        @extend .body .bold
        margin-right: 40px

        color: blue_light2
        @extend .transition

        &:hover
          color: gray_light2

        &:last-child
          margin-right: 0

        &_active
          color: gray_light2

          @media screen and (max-width: 1200px)
            color: blue_base

    @media screen and (max-width: 1200px)
      display: none

      &_opened
        display: block
        position: absolute
        top: 100px
        left: 0
        right: 0
        z-index: 1
        height: calc(100% - 100px)
        background: white
        padding-top: 30px

        .menu

          &__list
            flex-direction: column

          &__item
            margin-right: 0
            margin-bottom: 20px

            text-align: center

    @media screen and (max-width: 769px)
      top: 93px

  &__phone
    display: flex
    width: 370px
    align-items: center
    justify-content flex-end

    @media screen and (max-width: 1680px)
      width: auto

    .phone

      &__text
        margin-right: 25px

        font-weight: 500
        font-size: 18px
        color: gray_light2
        @extend .transition

        @extend .hover-opacity

        @media screen and (max-width: 769px)
          display: none

      &__btn

        .btn

          @media screen and (max-width: 769px)
            background-color: transparent

          @media screen and (max-width: 1440px) and (min-width: 1201px), (max-width: 769px)
            font-size: 0
            width: 50px

          &::before
            @media screen and (max-width: 1440px) and (min-width: 1201px), (max-width: 769px)
              content: ''
              display: block
              width: 50px
              height: 50px
              background-image: url('../img/general/contacts-phone.png')
              background-repeat: no-repeat
              background-size: initial
              background-position: center center

  &__burger
    display: none
    cursor: pointer
    align-items: center
    justify-content: center
    flex-grow: 0
    flex-shrink: 0
    background-color: blue_light
    width: 50px
    height: 50px
    border-radius: 50%
    margin-right: 20px

    @media screen and (max-width: 1200px)
      display: flex

    @media screen and (max-width: 769px)
      background-color: transparent
      margin-right: 0

    a
      display: block
      position: relative
      width: 20px
      height: 2px
      background-color: gray_light2

      &::before
        content: ''
        display: block
        position: absolute
        top: -6px
        left: 0
        right: 0
        width: 20px
        height: 2px
        background-color: gray_light2

      &::after
        content: ''
        display: block
        position: absolute
        top: 6px
        left: 0
        right: 0
        width: 20px
        height: 2px
        background-color: gray_light2


