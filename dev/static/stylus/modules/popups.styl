.popup
  display: none
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0

  &__overlay
    width: 100%
    height: 100%
    background-color: alpha(black, 70%)

  &__close
    position: absolute
    top: 34px
    right: 26px
    cursor: pointer
    width: 30px
    height: 30px

    &::after
      content: ''
      width: 30px
      height: 2px
      background: #b9c1c9
      z-index: 111
      display: block
      transform: rotate(45deg)
      position: absolute
      top: 15px
      right: 0

    &::before
      content: ''
      width: 30px
      height: 2px
      background: #b9c1c9
      z-index: 111
      display: block
      transform: rotate(-45deg)
      position: absolute
      top: 15px
      right: 0

  &__wrap
    position: relative

  &-plus

    &__wrap
      width: 745px
      padding: 60px 40px 40px
      margin: 0 auto
      min-height: 400px
      background-color: white