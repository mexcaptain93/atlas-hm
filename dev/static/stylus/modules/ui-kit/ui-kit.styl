.transition
  transition .3s all ease

.hover-opacity

  &:hover
    opacity: .8

.logo
  display: inline-block
  background-image: url('../img/general/logo.png')
  width: 160px
  height: 44px

.like-h1
  font-family: 'Muller Bold'
  font-size: 36px
  line-height: 46px
  color: gray_dark

.like-h2
  font-family: 'Muller Bold'
  font-size: 32px
  line-height: 42px
  color: gray_dark

.like-h3
  font-family: 'Muller Bold'
  font-size: 28px
  line-height: 38px
  color: gray_dark

.like-h4
  font-family: 'Muller Bold'
  font-size: 24px
  line-height: 34px
  color: gray_dark

.capital-18
  font-family: 'Muller Bold'
  font-size: 18px
  line-height: 28px
  color: gray_dark
  text-transform: uppercase

.bold
  font-family: 'Muller Bold'
  font-size: 16px
  line-height: 26px
  color: gray_dark

.medium
  font-family: 'Muller Medium'
  font-size: 14px
  line-height: 24px
  color: gray_dark

.capital-14
  @extend .capital-18

  font-size: 14px
  line-height: 24px

p
  font-size: 18px
  line-height: 28px
  color: gray_base
  letter-spacing: 0

.sub
  font-size: 16px
  line-height: 30px

.breadcrumb
  font-size: 14px
  line-height: 24px
  color: gray_light

.btn
  display: inline-flex
  justify-content: center
  align-items: center
  width: 195px
  height: 50px
  background-color: blue_light
  border-radius: 25px
  cursor: pointer
  @extend .transition

  color: white
  font-family: 'Muller Bold'
  font-size: 14px

  @extend .hover-opacity

  &_green
    background-color: green_base

.social
  display: inline-block
  width: 50px
  height: 50px
  margin-right: 10px

  @extend .transition
  @extend .hover-opacity


  &:last-child
    margin-right: 0

  &_vk
    background-image: url('../img/general/vk.png')

  &_ok
    background-image: url('../img/general/ok.png')

  &_fb
    background-image: url('../img/general/fb.png')

.arrow
  display: block
  width: 54px
  height: 54px
  background-color: white
  background-repeat no-repeat
  background-position 16px center
  border-radius: 30px
  cursor: pointer

  &_prev
    background-image: url('../img/svg/arrow-prev.svg')
    background-position 12px center

  &_next
    background-image: url('../img/svg/arrow-next.svg')

  &_small
    width: 40px
    height: 40px
    background-color: transparent
    border: 1px solid gray2

  &_white

    &.arrow

      &_prev
        background-image: url('../img/svg/arrow-prev-white.svg')

      &_next
        background-image: url('../img/svg/arrow-next-white.svg')

  &_gray

    &.arrow

      &_prev
        background-image: url('../img/svg/arrow-prev-gray.svg')

      &_next
        background-image: url('../img/svg/arrow-next-gray.svg')


.heading
  margin-bottom: 44px

.text
  margin-bottom: 60px

.pointed
  @extend .capital-14

  color: blue_base

  &_bordered
    border: 10px solid gray_light2
    padding: 47px 88px

    font-size: 18px
    line-height: 28px
    letter-spacing: 0.7px

.navigation
  .container
    display: flex
    justify-content: space-between
    padding: 60px 0
    border-top 1px solid gray2

  .sub
    color: gray_base

  .bold
    color: blue_base

  &__prev, &__next

    a
      display: flex
      align-items: center

      @extend .transition
      @extend .hover-opacity

  &__prev

    .arrow
      margin-right: 30px

  &__next

    .arrow
      margin-left: 30px

  &__next a
    display: flex

.colored-heading
  @extend .capital-18
  line-height: 20px

  background-color: gray_light2
  padding: 16px 0 14px 30px
  margin-bottom: 30px

  &_green
    border-left: 5px solid green_base

  &_blue
    border-left: 5px solid blue_base

  &_orange
    border-left: 5px solid orange_base

  &_violet
    border-left: 5px solid blue_dark

.colored-item
  display: flex
  align-items: center
  margin-bottom: 20px

  font-family: 'Muller Medium'
  font-size: 16px
  color: gray_dark

  &::before
    content: ''
    margin-right: 30px
    width: 26px
    height: 26px
    background-image: url('../img/svg/arrow-white.svg')
    background-repeat no-repeat
    background-position center center
    border-radius 50%

  &_green

    &::before
      background-color: green_base

  &_blue

    &::before
      background-color: blue_base

  &_orange

    &::before
      background-color: orange_base

  &_violet

    &::before
      background-color: blue_dark

.table
  display: table

  &__row
    display: table-row

  &__td
    display: table-cell
    width: 50%

.map
  height: 450px