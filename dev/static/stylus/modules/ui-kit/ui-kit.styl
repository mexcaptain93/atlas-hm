.transition
  transition .3s all ease

.hover-opacity

  &:hover
    opacity: .8

.logo
  display: inline-block
  background-image: url('../img/general/logo.png')
  width: 160px
  height: 44px

.like-h1
  font-family: 'Muller Bold'
  font-size: 36px
  line-height: 46px
  color: gray_dark

.like-h2
  font-family: 'Muller Bold'
  font-size: 32px
  line-height: 42px
  color: gray_dark

.like-h3
  font-family: 'Muller Bold'
  font-size: 28px
  line-height: 38px
  color: gray_dark

.like-h4
  font-family: 'Muller Bold'
  font-size: 24px
  line-height: 34px
  color: gray_dark

.capital-18
  font-family: 'Muller Bold'
  font-size: 18px
  line-height: 28px
  color: gray_dark
  text-transform: uppercase

.bold
  font-family: 'Muller Bold'
  font-size: 16px
  line-height: 26px
  color: gray_dark

.medium
  font-family: 'Muller Medium'
  font-size: 14px
  line-height: 24px
  color: gray_dark

.capital-14
  @extend .capital-18

  font-size: 14px
  line-height: 24px

p
  font-size: 18px
  line-height: 28px
  color: gray_base

  &.sub
    font-size: 16px
    line-height: 26px

.breadcrumb
  font-size: 14px
  line-height: 24px
  color: gray_light

.btn
  display: inline-flex
  justify-content: center
  align-items: center
  width: 195px
  height: 50px
  background-color: blue_light
  border-radius: 25px
  cursor: pointer
  @extend .transition

  color: white
  font-family: 'Muller Bold'
  font-size: 14px

  @extend .hover-opacity

  &_green
    background-color: green_base

.social
  display: inline-block
  width: 50px
  height: 50px
  margin-right: 10px

  @extend .transition
  @extend .hover-opacity


  &:last-child
    margin-right: 0

  &_vk
    background-image: url('../img/general/vk.png')

  &_ok
    background-image: url('../img/general/ok.png')

  &_fb
    background-image: url('../img/general/fb.png')

.arrow
  display: block
  width: 54px
  height: 54px
  background-color: white
  background-repeat no-repeat
  background-position center center
  border-radius: 30px
  cursor: pointer

  &_prev
    background-image: url('../img/svg/arrow-prev.svg')

  &_next
    background-image: url('../img/svg/arrow-next.svg')

  &_small
    width: 40px
    height: 40px
    background-color: transparent
    border: 1px solid gray2
